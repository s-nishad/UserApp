@model UserApp.Models.RegistrationViewModel

@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <style>
        .registerBody {
            height: 100vh;
            
            align-items: center;
            justify-content: center;
            background: linear-gradient(to right, #ff758c, #ff7eb3);
            width: 80%;
            max-width: 900px;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .row {
            height: 100%;
        }
        .form-container {
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .form-container h2 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-control {
            border-radius: 5px;
            height: 45px;
        }
        .btn-custom {
            background: linear-gradient(to right, #ff758c, #ff7eb3);
            border: none;
            padding: 12px;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }
        .btn-custom:hover {
            background: linear-gradient(to right, #ff5c6c, #ff7098);
        }
        .right-section {
            background: linear-gradient(to right, #ff758c, #ff7eb3);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            flex-direction: column;
        }
        .right-section h2 {
            font-size: 32px;
            font-weight: bold;
        }
        .right-section p {
            font-size: 18px;
        }
    </style>
}

<div class="container registerBody">
    <div class="row">
        <!-- Left Side: Form -->
        <div class="col-md-6 form-container">
            <h2>Register</h2>
            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-custom w-100">Register</button>
            </form>
            <p class="mt-3 text-center">Already have an account? <a asp-controller="Account" asp-action="Login">Login</a></p>
        </div>

        <!-- Right Side: Gradient Section -->
        <div class="col-md-6 right-section">
            <h2>Welcome to UserApp!</h2>
            <p>Create an account and start your journey.</p>
        </div>
    </div>
</div>